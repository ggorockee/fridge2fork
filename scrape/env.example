# 데이터베이스 연결 설정
POSTGRES_DB=recipe_db
POSTGRES_USER=recipe_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432

# 크롤링 기본 설정
TARGET_RECIPE_COUNT=200000

# 메모리 효율성을 위한 청크 설정 (새로 추가됨)
CHUNK_SIZE=100                    # 한 번에 처리할 URL 청크 크기 (기본값: 100)
CHUNK_DELAY=10.0                  # 청크 간 지연 시간 (초) - 메모리 정리 시간 (기본값: 10.0)

# 동시성 및 배치 설정
CONCURRENT_REQUESTS=2             # 동시 HTTP 요청 수 (기본값: 2)
BATCH_SIZE=5                      # DB 저장 배치 크기 (기본값: 5)
REQUEST_DELAY=3.0                 # 요청 간 지연 시간 (초) (기본값: 3.0)
BATCH_DELAY=5.0                   # 배치 간 지연 시간 (초) (기본값: 5.0)

# 모니터링 설정
PROGRESS_INTERVAL=10              # 진행률 표시 간격 (기본값: 10)
MEMORY_CHECK_INTERVAL=50          # 메모리 체크 간격 (기본값: 50)

# 메모리 제한 환경을 위한 권장 설정
# CHUNK_SIZE=50                   # 메모리가 매우 제한적인 경우
# CHUNK_DELAY=15.0                # 더 긴 메모리 정리 시간
# CONCURRENT_REQUESTS=1           # 동시 요청 수 최소화
# BATCH_SIZE=3                    # 배치 크기 최소화
